#:import Factory kivy.factory.Factory
#:import ImpressBFEM impress.ImpressBFEM
#:import BrevetDB database.BrevetDB

WindowManager:
    LoginScreen:
    CandidateScreen:
    FormScreen:
    CorrectionScreen:
    DeliberationScreen:
    StatistiquesScreen:

<LoginScreen>:
    name: "login"
    GridLayout:
        canvas:
            Color:
                rgba: 0.7, 0.45, 0.52, .7
            Rectangle:
                size: root.size
        cols: 1
        Label:
            text: "Page de connexion"
            size_hint: 1, None
            height: "80dp"
            font_size: "60dp"
        BoxLayout:
            orientation: "vertical"
            spacing: "15dp"
            BoxLayout:
                size_hint: .8, None
                height: "45dp"
                pos_hint: {"center_x": 0.5}
                Label:
                    text: "IA[Région]"
                TextInput:
                    id: ia
                    multiline: False
            BoxLayout:
                size_hint: .8, None
                height: "45dp"
                pos_hint: {"center_x": .5}
                Label:
                    text: "IEF[Département]"
                TextInput:
                    id: ief
                    multiline: False
            BoxLayout:
                size_hint: .8, None
                height: "45dp"
                pos_hint: {"center_x": .5}
                Label:
                    text: "Localité"
                TextInput:
                    id: localite
                    multiline: False
            BoxLayout:
                size_hint: .8, None
                height: "45dp"
                pos_hint: {"center_x": .5}
                Label:
                    text: "Centre d'examen"
                TextInput:
                    id: centre
                    multiline: False
            BoxLayout:
                size_hint: .8, None
                height: "45dp"
                pos_hint: {"center_x": .5}
                Label:
                    text: "Président de Jury"
                TextInput:
                    id: president
                    multiline: False
            BoxLayout:
                size_hint: .8, None
                height: "45dp"
                pos_hint: {"center_x": .5}
                Label:
                    text: "Numéro de téléphone"
                TextInput:
                    id: tel
                    multiline: False
            Button:
                size_hint: 0.6, None
                pos_hint: {"center_x": .5}
                height: "50dp"
                text: "Se connecter"
                on_release:
                    # BrevetDB().ajouter_jury(ia.text, ief.text, localite.text, centre.text, president.text, tel.text )
                    app.root.current="candidate"


# ------------------------- Candidate --------------------------------------------------------------------

<CandidateLine>
    size_hint: 1, None
    height: 45
    spacing: "5dp"
    Label:
        text: str(root.num)
    Label:
        text: root.first_name
        halign: "left"
        on_size: self.text_size = self.size
    Label:
        text: root.last_name
        halign: "left"
        on_size: self.text_size = self.size
    Label:
        text: root.status
        halign: "left"
        on_size: self.text_size = self.size
    Button:
        text : "Details"
        on_release: Factory.DetailsPopup(root.num).open()
    Button:
        text: "Modifier"
        on_release: Factory.UpdatePopup(root.num).open()

<DetailsLine>:
    size_hint: 1, None
    height: "45dp"
    Label:
        text: root.label
    TextInput:
        text: root.value
        disabled: True
# -------------------------------------------Form----------------------------------------------------
<FullNameBox>:
    size_hint_y: None
    spacing: "10dp"
    height: "30dp"
    Label:
        text: "Prénom(s):"
    TextInput:
        size_hint_y: None
        height: "30dp"
        multiline: False
        on_text: root.first_name = self.text
    Label:
        text: "Nom:"
    TextInput:
        size_hint_y: None
        height: "30dp"
        multiline: False
        on_text: root.last_name = self.text

<SexBox>:
    size_hint_y: None
    height: "30dp"
    Label:
        text: "Masculin"
    CheckBox:
        group: "sex"
        active: True
        on_active: root.set_sex("M")
    Label:
        text: "Feminin"
    CheckBox:
        group: "sex"
        on_active: root.set_sex("F")

<BirthBox>:
    size_hint_y: None
    height: "30dp"
    Label:
        text: "Date de naissance:"
    TextInput:
        multiline: False
        on_text: root.birth_date = self.text
    Label:
        text: "Lieu de naissance:"
    TextInput:
        multiline: False
        on_text: root.birth_place = self.text

<NationalityAndSchoolBox>:
    size_hint_y: None
    height: "30dp"
    Label:
        text: "Nationalité:"
    TextInput:
        multiline: False
        hint_text: "SEN"
        on_text: root.nationality = self.text
    Label:
        text: "Etablissement:"
    TextInput:
        multiline: False
        on_text: root.school = self.text

<OptionalTestBox>:
    size_hint_y: None
    height: "30dp"
    Label:
        text: "Neutre"
    CheckBox:
        group: "optional"
        active: True
        on_active: root.set_option("NEUTRE")
    Label:
        text: "Dessin"
    CheckBox:
        group: "optional"
        on_active: root.set_option("DESSIN")
    Label:
        text: "Couture"
    CheckBox:
        group: "optional"
        on_active: root.set_option("COUTURE")
    Label:
        text: "Musique"
    CheckBox:
        group: "optional"
        on_active: root.set_option("MUSIQUE")

<AbilityBox>:
    size_hint_y: None
    height: "30dp"
    Label:
        text: "Apte"
    CheckBox:
        group: "aptitude"
        active: True
        on_active: root.set_aptitude("APTE")
    Label:
        text: "Inapte"
    CheckBox:
        group: "aptitude"
        on_active: root.set_aptitude("INAPTE")

<CandidateTypeBox>:
    size_hint_y: None
    height: "30dp"
    Label:
        text: "Officiel"
    CheckBox:
        group: "type"
        active: True
        on_active: root.set_type("OFFICIEL")
    Label:
        text: "Individiuel"
    CheckBox:
        group: "type"
        on_active: root.set_type("INDIVIDUEL")


<AttemptAndAvgBox>:
    size_hint_y: None
    height: "30dp"
    Label:
        text: "Nombre de tentatives:"
        size_hint_x: .4
    TextInput:
        multiline: False
        size_hint_x: .1
        on_text: root.attempts = self.text
    Label:
        text: "Moyennes"
    TextInput:
        hint_text: "6e"
        size_hint_x: .125
        multiline: False
        on_text: root.moy_6e = self.text
    TextInput:
        hint_text: "5e"
        size_hint_x: .125
        multiline: False
        on_text: root.moy_5e = self.text
    TextInput:
        hint_text: "4e"
        size_hint_x: .125
        multiline: False
        on_text: root.moy_4e = self.text
    TextInput:
        hint_text: "3e"
        size_hint_x: .125
        multiline: False
        on_text: root.moy_3e = self.text


<FormScreen>:
    name: "form"
    id: cand_form
    BoxLayout:
        orientation: "vertical"
        StackLayout:
            spacing: "20dp"
            canvas:
                Color:
                    rgba: 0.4, 0.45, 0.52, .7
                Rectangle:
                    size: root.size
            Label:
                text: "Ajout d'un nouveau candidat"
                size_hint: 1, None
                font_size: "40dp"
                height: "40dp"
            FullNameBox:
                id: full_name
                size_hint_y: None
                height: self.height
            SexBox:
                id: sex
                size_hint_y: None
                height: self.height
            BirthBox:
                id: birth
                size_hint_y: None
                height: self.height
            NationalityAndSchoolBox:
                id: nat
                size_hint_y: None
                height: self.height
            OptionalTestBox:
                id: option
                size_hint_y: None
                height: self.height
            CandidateTypeBox:
                id: type_cand
                size_hint_y: None
                height: self.height
            AbilityBox:
                id: ability
                size_hint_y: None
                height: self.height
            AttemptAndAvgBox:
                id: attempt
                size_hint_y: None
                height: self.height
        BoxLayout:
            size_hint: 1, None
            pos_hint : {"y": 0}
            spacing: "10dp"
            height: "40dp"
            Button:
                text: "Réinitialiser"
                on_release:
                    full_name.clear_fields()
                    birth.clear_fields()
                    nat.clear_fields()
                    attempt.clear_fields()
            Button:
                text: "Soumettre"
                on_release:
                    cand_form.on_submit(full_name.validation(), sex.sex, birth.validation(), nat.validation(), option.option,
                    type_cand.type_candidat, ability.aptitude, attempt.validation(type_cand.type_candidat))
                    app.root.get_screen("candidate").refresh() if cand_form.is_valid else None
                    app.root.current="candidate" if cand_form.is_valid else "form"
                    root.manager.transition.direction = "right"

<CandidateScreen>:
    name: "candidate"
    id: cand_screen
    BoxLayout:
        orientation: "vertical"
        spacing: "15dp"
        BoxLayout:
            size_hint: 1, None
            height: "30"
            Label:
                size_hint: .15, 1
                text: "Numero"
            Label:
                size_hint: .15, 1
                text: "Prénom(s)"
            Label:
                size_hint: .2, 1
                text: "Nom"
            Label:
                size_hint: .1, 1
                text: "Statut"
            Label:
                size_hint: .4, 1
        ScrollView:
            CandidatesStack:
                size_hint: 1, None
                height: self.minimum_height
        BoxLayout:
            size_hint: 1, None
            height: "40dp"
            Button:
                text: "Imprimer liste des candidats"
                on_release:
            Button:
                text: "Ajouter un candidat"
                on_release:
                    app.root.current = "form"
                    root.manager.transition.direction = "left"
            Button:
                text: cand_screen.my_text
                on_release:
                    app.root.current = cand_screen.my_text.lower()
                    root.manager.transition.direction = "left"
            Button:
                text: "Statistiques"
                on_release:
                    app.root.current = "statistiques"
                    root.manager.transition.direction = "left"

# --------------------Correction--------------------------------------------------------------------------

<CorrectionLine>:
    size_hint_y: None
    height: "30dp"
    Label:
        text: root.anonymat
        size_hint_y: None
        height: "30dp"
    TextInput:
        multiline: False
        size_hint_y: None
        height: "30dp"
        on_text: root.note = self.text


<CorrectionScreen>:
    name: "correction"
    BoxLayout:
        orientation: "vertical"
        CorrectionTabPanel:
            size_hint_y: .9
        Button:
            size_hint_y: .1
            text: "Go Back"
            on_release:
                app.root.get_screen("candidate").refresh()
                app.root.current = "candidate"
                root.manager.transition.direction = "right"

#---------------------Deliberation------------------------------------------------------------------------
<DeliberationTabHeader>:
    size_hint_y: None
    height: "30dp"
    Label:
        text: "No"
        size_hint_x: .1
        bold: True
    Label:
        text: "PRENOM(S)"
        size_hint_x: .2
        bold: True
    Label:
        text: "NOM"
        size_hint_x: .2
        bold: True
    Label:
        text: "SEXE"
        size_hint_x: .2
        bold: True
    Label:
        text: "ETABLISSEMENT"
        size_hint_x: .2
        bold: True
    Label:
        text: "RANG"
        size_hint_x: .1
        bold: True


<DeliberationScreen>:
    name: "deliberation"
    BoxLayout:
        orientation: "vertical"
        DeliberationTabPanel:
        BoxLayout:
            Button:
                size_hint_y: None
                height: "40dp"
                pos_hint: {"x":0}
                text: "Imprimer le PV"
                on_release:
            Button:
                size_hint_y: None
                height: "40dp"
                pos_hint: {"x":0}
                text: "Retour"
                on_release:
                    app.root.get_screen("candidate").refresh()
                    app.root.current = "candidate"
                    root.manager.transition.direction = "right"

# --------------------Statistics--------------------------------------------------------------------------

<StatsTabPanel>:
    do_default_tab: False
    CandidateStatsItem:
    DeliberationStatsItem:

<CandidateStatsItem>:
    text: "Candidats"
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Répartition par genre"
        Label:
            text: "Répartition par type de candidats"
        Label:
            text: "Répartition par nombre de tentatives"
        Label:
            text: "Répartition par aptitude sportive"
        Label:
            text: "Répartition par épreuve facultative"
        Label:
            text: "Répartition par nationalité"


<DeliberationStatsItem>:
    text: "Délibération"
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Répartition par résultats au premier tour" # admis au premier tour, repeché au premier tour, autorisé au second tour, ajourné
        Label:
            text: "Répartition par résultats au second tour tour" # admis au second tour, repeché au second tour, ajourné

<StatistiquesScreen>:
    name: "statistiques"
    BoxLayout:
        orientation: "vertical"
        StatsTabPanel:
            size_hint: 1, .9
        Button:
            size_hint: 1, .1
            text: "Go Back"
            on_release:
                app.root.current = "candidate"
                root.manager.transition.direction = "right"
